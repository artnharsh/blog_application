<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>
        <title>signin</title>
</head>

<body>
    <%- include("./partials/nav.ejs") %>

        <div class="container mt-5">
            <h1>Sign In</h1>
            <p class="lead">Already have an account? Sign in below.</p>
            <hr>
            <p class="text-muted">Please fill in the form below to sign in to your account.</p>
            <p class="text-muted">Don't have an account? <a href="/user/signup">Sign up here</a>.</p>
            <hr>
            <form action="/user/signin" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>

        <%- include("./partials/scripts.ejs") %>
</body>

</html>